{
  "name": "hotkeys-inputs-js",
  "version": "1.0.10",
  "description": "A javascript library for handling both keyboard and gamepad inputs in web applications.",
  "main": "index.ts",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --coverageReporters='json-summary'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugoperier/hotkeys-inputs-js.git"
  },
  "keywords": [
    "keyboard",
    "gamepad",
    "hotkeys",
    "input",
    "javascript",
    "joystick",
    "mapping"
  ],
  "author": "Hugo PERIER",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugoperier/hotkeys-inputs-js/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/hugoperier/hotkeys-inputs-js#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "prettier": "^2.8.4",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1"
  },
  "dependencies": {
    "hotkeys-js": "^3.10.1"
  }
}